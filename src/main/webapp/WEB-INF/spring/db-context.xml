        <!-- dbcp.BasicDataSource option 설정 -->
		<property name="maxWait" value="-1"/> <!-- 커넥션 풀 대기시간, -1일 경우 무한대기 -->
		<property name="initialSize" value="10"/>
        <property name="maxActive" value="30"/>
